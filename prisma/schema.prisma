datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  createdAt DateTime @default(now())
}

model Income {
  id       Int      @id @default(autoincrement())
  userId   Int
  category String
  amount   Float
  note     String?
  date     DateTime
}

model Expense {
  id       Int      @id @default(autoincrement())
  userId   Int
  category String
  amount   Float
  note     String?
  date     DateTime
}
